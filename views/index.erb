<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>Today's Menu</h1>
      <div class="table-responsive">
        <table class="table">
          <% @items.each do |station, description| %>
            <tr>
              <td>
                <b><%= "#{station.text.capitalize}"%></b>
              </td>
              <td>
                <p><%= "#{description.text.capitalize}."%></p>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
