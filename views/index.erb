<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Today's Menu</h1>
    </div>
  </div>
  <% if @meals.empty? %>
    <div class="panel panel-default">
      <div class="panel-body">
        <h2 class="text-center">The Bon is closed today!</h2>
      </div>
    </div>
  <% else %>
    <% @meals.each do |meal| %>
      <div class='panel panel-default'>
        <div class="panel-heading">
          <span class="panel-title"><%= meal.name %></span>
        </div>
        <div class="panel-body">
          <% meal.items.sort { |a,b| b.votes <=> a.votes }.each do |item| %>
            <div class="row item">
              <div class="col-md-1 col-xs-2">
                <% vote_state = @cookie[item.id] %>
                <div class="btn-group-vertical" role="group" aria-label="...">
                  <% if vote_state == "upvote" %>
                    <button type="button" class="btn btn-primary" disabled="disabled">
                      <span class="glyphicon glyphicon-menu-up" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-default" disabled="disabled">
                      <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span>
                    </button>
                  <% elsif vote_state == "downvote" %>
                    <button type="button" class="btn btn-default" disabled="disabled">
                      <span class="glyphicon glyphicon-menu-up" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-primary" disabled="disabled">
                      <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span>
                    </button>
                  <% else %>
                    <button type="button" class="btn btn-default vote vote-upvote" id='<%= "#{item.id}" %>' value="upvote">
                      <span class="glyphicon glyphicon-menu-up" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-default vote vote-downvote" id='<%= "#{item.id}" %>' value="downvote">
                      <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span>
                    </button>
                  <% end %>
                </div>
              </div>
              <div class="col-md-11 col-xs-10">
                <div class="row">
                  <div class="col-sm-2">
                    <h4><%= item.station %></h4>
                    <span class="label label-primary">
                      score: 
                      <span class="score" id='<%= "#{item.id}" %>'>
                        <%= item.votes %>
                      </span>
                    </span>
                    <a class="comment-toggle" id='<%= "#{item.id}" %>'>
                      <span class="label label-primary">Show comments</span>
                    </a>
                  </div>
                  <div class="col-sm-10">
                    <h5><%= item.title %></h5>
                    <small><%= item.description %></small>
                  </div>
                </div>
              </div>
            </div>
            <div class="row comments" id='<%= "#{item.id}" %>'>
              <div class="col-md-12">
                <ul class="list-group">
                  <% item.comments.each do |comment| %>
                    <li class="list-group-item">
                      <span class="text-left"><%= comment.comment %></span>
                      <small class="text-right"><%= comment.email %> <%= comment.created_at %></small>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>